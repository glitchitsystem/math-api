{
  "info": {
    "name": "Math API Collection",
    "description": "Complete collection for testing the Math API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    pm.test('Login successful', function () {",
                  "        pm.expect(response.message).to.eql('Login successful');",
                  "    });",
                  "} else {",
                  "    pm.test('Login failed', function () {",
                  "        pm.response.to.have.status(401);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Math Operations",
      "item": [
        {
          "name": "Basic Calculator - Addition",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/math/calculate?operation=add&a=10&b=5",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "math",
                "calculate"
              ],
              "query": [
                {
                  "key": "operation",
                  "value": "add"
                },
                {
                  "key": "a",
                  "value": "10"
                },
                {
                  "key": "b",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Basic Calculator - Division",
          "request": {
